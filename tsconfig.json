{
  "compilerOptions": {
    "module": "UMD",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
